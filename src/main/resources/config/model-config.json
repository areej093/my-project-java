{
  "models": {
    "djl-lstm": {
      "type": "LSTM",
      "input_features": ["price_per_ton", "volume", "month", "year", "product_encoded"],
      "output_features": ["predicted_price"],
      "architecture": {
        "hidden_layers": [64, 32],
        "dropout": 0.2,
        "learning_rate": 0.001,
        "epochs": 100,
        "batch_size": 32,
        "sequence_length": 30
      }
    }
  },
  "training": {
    "train_test_split": 0.8,
    "validation_split": 0.1,
    "cross_validation_folds": 5,
    "metrics": ["mae", "mse", "rmse", "r2"]
  }
}
